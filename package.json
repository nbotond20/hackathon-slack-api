{
  "author": "Nuszpl Botond",
  "name": "service-slack-bot-api",
  "main": "src/index.ts",
  "version": "0.1.0",
  "description": "Service for communicating with Slack API",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "tsx watch src",
    "build": "rimraf ./dist && tsc --project tsconfig.json",
    "start": "ts-node -r tsconfig-paths/register --transpile-only ./src/index.ts",
    "lint": "eslint \"**/*.{ts,json}\"",
    "lint:fix": "eslint \"**/*.{ts,json}\" --quiet --fix",
    "format": "prettier --write  src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install"
  },
  "dependencies": {
    "@hapi/boom": "10.0.1",
    "@slack/web-api": "^6.11.0",
    "cors": "2.8.5",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "helmet": "7.1.0",
    "morgan": "1.10.0",
    "uuid4": "2.0.3"
  },
  "devDependencies": {
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/morgan": "1.9.9",
    "@types/node": "20.10.5",
    "@types/uuid4": "2.0.3",
    "@typescript-eslint/eslint-plugin": "6.15.0",
    "cross-env": "^7.0.3",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.0",
    "prettier": "3.1.1",
    "rimraf": "^5.0.5",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "tsx": "4.7.0",
    "typescript": "5.3.3",
    "zod": "3.22.4",
    "husky": "^8.0.0"
  },
  "engines": {
    "node": "20.x"
  }
}
